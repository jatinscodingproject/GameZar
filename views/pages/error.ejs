<!doctype html>
<html lang="en">

<head>
    <%- include("../includes/header") %>

    <style>
        /* Animated Background */
        body {
            background: linear-gradient(135deg, #0a0a0a, #1a0f0f, #000000, #1a0f0f);
            background-size: 300% 300%;
            animation: bgMove 12s ease infinite;
        }

        @keyframes bgMove {
            0% { background-position: 0% 50%; }
            50% { background-position: 100% 50%; }
            100% { background-position: 0% 50%; }
        }

        /* Error Box */
        .error-box {
            background: rgba(0, 0, 0, 0.55);
            border: 1px solid rgba(216, 68, 89, 0.4);
            border-radius: 18px;
            padding: 2.5rem;
            width: 100%;
            max-width: 420px;
            box-shadow: 0 0 20px rgba(216, 68, 89, 0.5);
            backdrop-filter: blur(10px);
            animation: fadeIn 1s ease-in-out;
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .error-logo {
            height: 110px;
            filter: drop-shadow(0 0 15px rgba(216, 68, 89, 0.6));
        }

        .error-button {
            background: #D84459;
            border-radius: 12px;
            padding: .8rem;
            width: 100%;
            font-size: 1.1rem;
            font-weight: bold;
            transition: 0.3s;
        }

        .error-button:hover {
            background: #be2f47;
            box-shadow: 0 0 15px rgba(216, 68, 89, 0.8);
        }
    </style>
</head>

<body class="min-h-screen flex items-center justify-center p-4">

    <div class="error-box text-center">

        <img src="/images/bbb.png" class="error-logo mb-6 mx-auto block" alt="GameOn Logo">

        <h2 class="text-3xl font-bold mb-4 text-[#D84459]">
            Access Denied
        </h2>

        <p class="text-gray-300 mb-6">
            <%= message || "You are not allowed to access this page." %>
        </p>

    </div>

</body>

</html>